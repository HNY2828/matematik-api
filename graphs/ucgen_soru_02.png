import matplotlib.pyplot as plt
import numpy as np

# Noktalar
A = np.array([2, 4])
B = np.array([0, 0])
C = np.array([6, 0])

fig, ax = plt.subplots(figsize=(6,6))

# Üçgen kenarları
ax.plot([A[0], B[0]], [A[1], B[1]], linewidth=3)
ax.plot([A[0], C[0]], [A[1], C[1]], linewidth=3)
ax.plot([B[0], C[0]], [B[1], C[1]], linewidth=3)

# Köşe harfleri
ax.text(A[0], A[1]+0.3, "A", fontsize=16, ha='center')
ax.text(B[0]-0.2, B[1]-0.3, "B", fontsize=16)
ax.text(C[0]+0.1, C[1]-0.3, "C", fontsize=16)

# A noktasına dik açı işareti
right_angle_size = 0.5
ax.plot([A[0], A[0]+right_angle_size],
        [A[1], A[1]-right_angle_size], linewidth=2)
ax.plot([A[0]+right_angle_size, A[0]+right_angle_size],
        [A[1]-right_angle_size, A[1]-right_angle_size*2], linewidth=2)
ax.plot([A[0], A[0]+right_angle_size],
        [A[1]-right_angle_size*2, A[1]-right_angle_size*2], linewidth=2)

# Açı yazıları
ax.text(0.6, 0.3, "2x + 23°", fontsize=14)
ax.text(4.8, 0.3, "x - 8°", fontsize=14)

# Görünüm ayarları
ax.set_aspect('equal')
ax.axis('off')

plt.savefig("ucgen_soru_02.png", dpi=300, bbox_inches='tight')
plt.show()
