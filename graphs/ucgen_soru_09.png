import matplotlib.pyplot as plt
import numpy as np
from matplotlib.patches import Arc

# Noktalar
A = np.array([4, 6])
B = np.array([0, 0])
C = np.array([8, 0])
D = np.array([9.5, 0])  # uzatılmış doğru

fig, ax = plt.subplots(figsize=(7,6))

# Üçgen
ax.plot([A[0], B[0]], [A[1], B[1]], linewidth=3)
ax.plot([A[0], C[0]], [A[1], C[1]], linewidth=3)
ax.plot([B[0], C[0]], [B[1], C[1]], linewidth=3)

# C'den sağa uzatma
ax.plot([C[0], D[0]], [C[1], D[1]], linewidth=3)

# Eşitlik işaretleri (AB = AC)
mid_AB = (A + B) / 2
mid_AC = (A + C) / 2

ax.text(mid_AB[0]-0.2, mid_AB[1], "//", fontsize=18, rotation=55)
ax.text(mid_AC[0]-0.2, mid_AC[1], "//", fontsize=18, rotation=-55)

# Nokta isimleri
ax.text(A[0], A[1]+0.3, "A", fontsize=14, ha='center')
ax.text(B[0]-0.3, B[1]-0.4, "B", fontsize=14)
ax.text(C[0], C[1]-0.4, "C", fontsize=14)
ax.text(D[0], D[1]-0.4, "D", fontsize=14)

# Tepe açısı x
arc_A = Arc(A, 1.5, 1.5, angle=0, theta1=230, theta2=310)
ax.add_patch(arc_A)
ax.text(A[0], A[1]-1, "x", fontsize=14, ha='center')

# Dış açı 130°
arc_C = Arc(C, 1.4, 1.4, angle=15, theta1=-7, theta2=100)
ax.add_patch(arc_C)
ax.text(C[0]+0.9, C[1]+0.6, "130°", fontsize=13)

# Görünüm ayar
ax.set_aspect('equal')
ax.axis('off')

plt.savefig("ucgen_soru_09.png", dpi=300, bbox_inches='tight')
plt.show()
