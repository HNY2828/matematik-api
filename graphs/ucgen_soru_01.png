import matplotlib.pyplot as plt
import numpy as np
from matplotlib.patches import Arc

# Noktalar (görsel olarak dengeli üçgen)
A = np.array([0, 4])
B = np.array([-3, 0])
C = np.array([3, 0])

fig, ax = plt.subplots(figsize=(6,6))

# Üçgen kenarları
ax.plot([A[0], B[0]], [A[1], B[1]], linewidth=3)
ax.plot([A[0], C[0]], [A[1], C[1]], linewidth=3)
ax.plot([B[0], C[0]], [B[1], C[1]], linewidth=3)

# Köşe isimleri
ax.text(A[0], A[1]+0.3, "A", fontsize=16, ha='center')
ax.text(B[0]-0.3, B[1]-0.3, "B", fontsize=16)
ax.text(C[0]+0.1, C[1]-0.3, "C", fontsize=16)

# Açı yazıları
ax.text(-0.2, 3.1, "4x", fontsize=14)
ax.text(-2.5, 0.3, "3x", fontsize=14)
ax.text(2.2, 0.3, "2x", fontsize=14)

# Açı yayları
arc_A = Arc(A, 1.3, 1.3, angle=0, theta1=220, theta2=320)
arc_B = Arc(B, 1.3, 1.3, angle=0, theta1=0, theta2=50)
arc_C = Arc(C, 1.3, 1.3, angle=0, theta1=130, theta2=180)

ax.add_patch(arc_A)
ax.add_patch(arc_B)
ax.add_patch(arc_C)

# Görsel ayarları
ax.set_aspect('equal')
ax.axis('off')

# PNG export (yüksek kalite)
plt.savefig("ucgen_soru_01.png", dpi=300, bbox_inches='tight')
plt.show()