import matplotlib.pyplot as plt
import numpy as np
from matplotlib.patches import Arc, FancyArrowPatch

# Noktalar
E = np.array([-2, 0])
B = np.array([0, 0])
C = np.array([6, 0])
F = np.array([8, 0])

A = np.array([3, 5])
D = np.array([3.8, 6.2])

fig, ax = plt.subplots(figsize=(8,6))

# Taban doğru (E-B-C-F)
ax.plot([E[0], F[0]], [E[1], F[1]], linewidth=3)

# Oklar
ax.add_patch(FancyArrowPatch((E[0],0),(E[0]-0.8,0),arrowstyle='-|>',mutation_scale=15))
ax.add_patch(FancyArrowPatch((F[0],0),(F[0]+0.8,0),arrowstyle='-|>',mutation_scale=15))

# Üçgen
ax.plot([A[0], B[0]], [A[1], B[1]], linewidth=3)
ax.plot([A[0], C[0]], [A[1], C[1]], linewidth=3)

# A-D uzantı
ax.plot([A[0], D[0]], [A[1], D[1]], linewidth=3)

# Nokta etiketleri
ax.text(A[0], A[1]+0.3, "A", fontsize=14, ha='center')
ax.text(B[0], B[1]-0.4, "B", fontsize=14)
ax.text(C[0], C[1]-0.4, "C", fontsize=14)
ax.text(D[0]+0.1, D[1], "D", fontsize=14)
ax.text(E[0]-0.2, E[1]-0.4, "E", fontsize=14)
ax.text(F[0]+0.1, F[1]-0.4, "F", fontsize=14)

# B açısı 130°
arc_B = Arc(B, 1.5, 1.5, angle=-120, theta1=180, theta2=310)
ax.add_patch(arc_B)
ax.text(B[0]-1.3, B[1]+0.5, "130°", fontsize=13)

# A açısı 120°
arc_A = Arc(A, 1.3, 1.3, angle=0, theta1=300, theta2=420)
ax.add_patch(arc_A)
ax.text(A[0]+0.4, A[1]-0.2, "120°", fontsize=13)

# C açısı x
arc_C = Arc(C, 1.3, 1.3, angle=-5, theta1=0, theta2=120)
ax.add_patch(arc_C)
ax.text(C[0]+0.6, C[1]+0.4, "x", fontsize=14)

# Görünüm
ax.set_aspect('equal')
ax.axis('off')

plt.savefig("ucgen_soru_04.png", dpi=300, bbox_inches='tight')
plt.show()
