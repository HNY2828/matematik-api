 import matplotlib.pyplot as plt
import numpy as np
from matplotlib.patches import Arc

# Noktalar (yaklaşık konumlandırma)
B = np.array([0, 0])
C = np.array([10, 0])
D = np.array([6, 0])
A = np.array([1.5, 6])
E = (A + D) / 2  # AE = ED

fig, ax = plt.subplots(figsize=(7,6))

# Üçgen ABC
ax.plot([A[0], B[0]], [A[1], B[1]], linewidth=3)
ax.plot([A[0], C[0]], [A[1], C[1]], linewidth=3)
ax.plot([B[0], C[0]], [B[1], C[1]], linewidth=3)

# AD ve BE
ax.plot([A[0], D[0]], [A[1], D[1]], linewidth=3)
ax.plot([B[0], E[0]], [B[1], E[1]], linewidth=3)

# E noktası
ax.text(E[0]+0.1, E[1], "E", fontsize=13)

# Nokta isimleri
ax.text(A[0], A[1]+0.3, "A", fontsize=14)
ax.text(B[0]-0.3, B[1]-0.4, "B", fontsize=14)
ax.text(C[0], C[1]-0.4, "C", fontsize=14)
ax.text(D[0], D[1]-0.4, "D", fontsize=14)

# AE = ED eşitlik işareti
mid_AE = (A + E) / 2
mid_ED = (E + D) / 2

ax.text(mid_AE[0], mid_AE[1], "//", fontsize=14, rotation=-50)
ax.text(mid_ED[0], mid_ED[1], "//", fontsize=14, rotation=-50)

# B açısı (96°)
arc_B = Arc(B, 2.2, 2.2, angle=0, theta1=10, theta2=106)
ax.add_patch(arc_B)

# C açısı (27°)
arc_C = Arc(C, 2.0, 2.0, angle=0, theta1=153, theta2=180)
ax.add_patch(arc_C)
ax.text(C[0]-1.3, C[1]+0.7, "27°", fontsize=12)

# A'daki x açısı (∠DAC)
arc_A = Arc(A, 1.8, 1.8, angle=0, theta1=280, theta2=330)
ax.add_patch(arc_A)
ax.text(A[0]+0.2, A[1]-1.2, "x", fontsize=14)

# Görünüm
ax.set_aspect('equal')
ax.axis('off')

plt.savefig("ucgen_soru_11.png", dpi=300, bbox_inches='tight')
plt.show()
