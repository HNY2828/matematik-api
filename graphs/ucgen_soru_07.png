import matplotlib.pyplot as plt
import numpy as np
from matplotlib.patches import Arc

# Noktalar
A = np.array([4, 7])
B = np.array([0, 0])
C = np.array([8, 0])
D = np.array([4, 2])

fig, ax = plt.subplots(figsize=(7,6))

# Büyük üçgen
ax.plot([A[0], B[0]], [A[1], B[1]], linewidth=3)
ax.plot([A[0], C[0]], [A[1], C[1]], linewidth=3)

# İç BD ve CD
ax.plot([B[0], D[0]], [B[1], D[1]], linewidth=3)
ax.plot([C[0], D[0]], [C[1], D[1]], linewidth=3)

# Nokta isimleri
ax.text(A[0], A[1]+0.3, "A", fontsize=14, ha='center')
ax.text(B[0]-0.3, B[1]-0.4, "B", fontsize=14)
ax.text(C[0], C[1]-0.4, "C", fontsize=14)
ax.text(D[0], D[1]+0.3, "D", fontsize=14)

# A açısı 70°
arc_A = Arc(A, 1.5, 1.5, angle=0, theta1=230, theta2=310)
ax.add_patch(arc_A)
ax.text(A[0], A[1]-1.3, "70°", fontsize=13, ha='center')

# B açısı 2x
arc_B = Arc(B, 1.6, 1.6, angle=17, theta1=10, theta2=45)
ax.add_patch(arc_B)
ax.text(B[0]+0.8, B[1]+0.9, "2x", fontsize=13)

# C açısı 2x+10
arc_C = Arc(C, 1.6, 1.6, angle=-13, theta1=135, theta2=170)
ax.add_patch(arc_C)
ax.text(C[0]-1.8, C[1]+0.9, "2x+10°", fontsize=13)

# D açısı 140°
arc_D = Arc(D, 1.6, 1.6, angle=0, theta1=200, theta2=340)
ax.add_patch(arc_D)
ax.text(D[0], D[1]-1.2, "140°", fontsize=13, ha='center')

# Görünüm
ax.set_aspect('equal')
ax.axis('off')

plt.savefig("ucgen_soru_07.png", dpi=300, bbox_inches='tight')
plt.show()
